@model List<GuestRespond>;

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
               Email
            </th>
            <th>
               Phone
            </th><th>
               Attending
            </th>
            <th>

            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.Name))
        {
            <tr>

                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Email
                </td>
                <td>
                    @obj.Phone

                </td>
                <td>
                    @obj.willAttend

                </td>
            </tr>
        }
    </tbody>

</table>
